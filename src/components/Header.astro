---
import MobileHeader from "./MobileHeader.astro";

const currentPath = Astro.url.pathname;

const navItems = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Use Cases", href: "/use-cases" },
  { name: "Pricing", href: "/pricing" },
  { name: "Contact", href: "/contact" },
];
---

<!-- Desktop Header -->
<header
  class="hidden md:block fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 transition-all duration-300"
  role="banner"
  id="desktop-header"
>
  <nav
    class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl"
    aria-label="Main navigation"
  >
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center space-x-3 group cursor-pointer"
        aria-label="Spentiva Home"
      >
        <div
          class="w-10 h-10 flex items-center justify-center transform transition-all duration-300 group-hover:scale-110"
        >
          <img
            src="/logo.svg"
            alt="Spentiva Logo"
            class="w-full h-full"
            width="40"
            height="40"
          />
        </div>
        <div class="flex flex-col">
          <span
            class="font-bold text-xl text-gray-900 tracking-tight leading-none"
            >Spentiva</span
          >
          <span
            class="text-[10px] tracking-widest text-gray-500 font-medium uppercase leading-none mt-1"
            >By Exyconn</span
          >
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="flex items-center md:space-x-3 lg:space-x-8">
        <div class="flex items-center md:space-x-3 lg:space-x-8">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class={`cursor-pointer text-sm font-medium transition-all duration-200 relative group ${
                  currentPath === item.href
                    ? "text-primary-600"
                    : "text-gray-600 hover:text-primary-600"
                }`}
                aria-label={item.name}
                aria-current={currentPath === item.href ? "page" : undefined}
              >
                {item.name}
                <span
                  class={`absolute -bottom-1 left-0 w-full h-0.5 bg-primary-600 transform origin-left transition-transform duration-300 ${currentPath === item.href ? "scale-x-100" : "scale-x-0 group-hover:scale-x-100"}`}
                />
              </a>
            ))
          }
        </div>

        <div class="flex items-center space-x-4">
          <a
            href="https://app.spentiva.com/login"
            class="cursor-pointer px-5 py-2.5 text-sm font-semibold text-gray-700 hover:text-primary-600 border border-gray-200 hover:border-primary-200 rounded-xl transition-all duration-300 hover:bg-primary-50"
            aria-label="Log in to your account"
          >
            Log in
          </a>
          <a
            href="https://app.spentiva.com/signup"
            class="cursor-pointer px-5 py-2.5 bg-primary-600 text-white text-sm font-semibold rounded-xl hover:bg-primary-700 transition-all duration-300 shadow-lg shadow-primary-600/20 hover:shadow-primary-600/40 hover:-translate-y-0.5"
            aria-label="Sign up for free"
          >
            Sign up Free
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile Header -->
<div class="md:hidden">
  <MobileHeader />
</div>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16 md:h-20"></div>
