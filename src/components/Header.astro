---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Pricing", href: "/pricing" },
  { name: "Blog", href: "/blog" },
  { name: "Contact", href: "/contact" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div
          class="w-10 h-10 bg-gradient-to-br from-primary-300 via-primary-400 to-accent-400 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform"
        >
          <i class="fas fa-wallet text-white text-xl"></i>
        </div>
        <div class="flex flex-col">
          <span class="font-bold text-xl text-gray-900">Spentiva</span>
          <span class="text-xs text-gray-600">By Exyconn</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class={`font-medium transition-colors ${
                currentPath === item.href
                  ? "text-primary-400"
                  : "text-gray-700 hover:text-primary-400"
              }`}
            >
              {item.name}
            </a>
          ))
        }
        <a
          href="https://app.spentiva.com/login"
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary-300 via-primary-400 to-accent-400 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-purple-700 transform hover:scale-105 transition-all shadow-lg"
        >
          <i class="fas fa-sign-in-alt mr-2"></i>
          Login
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        aria-label="Toggle menu"
      >
        <i class="fas fa-bars text-gray-900 text-xl"></i>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class={`px-4 py-2 rounded-lg font-medium transition-colors ${
                currentPath === item.href
                  ? "bg-primary-50 text-primary-400"
                  : "text-gray-700 hover:bg-gray-100"
              }`}
            >
              {item.name}
            </a>
          ))
        }
        <a
          href="https://app.spentiva.com/login"
          class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-primary-300 via-primary-400 to-accent-400 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-purple-700 transform hover:scale-105 transition-all shadow-lg"
        >
          <i class="fas fa-sign-in-alt mr-2"></i>
          Login
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16 md:h-20"></div>
