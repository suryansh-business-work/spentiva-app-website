---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Use Cases", href: "/use-cases" },
  { name: "Pricing", href: "/pricing" },
  { name: "Contact", href: "/contact" },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-white/20 shadow-sm transition-all duration-300"
  role="banner"
>
  <nav
    class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl"
    aria-label="Main navigation"
  >
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center space-x-2 group cursor-pointer"
        aria-label="Spentiva Home"
      >
        <div
          class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center transform transition-all duration-300 ease-out"
        >
          <img
            src="/logo.svg"
            alt="Spentiva Logo"
            class="w-full h-full filter drop-shadow-sm"
            width="48"
            height="48"
          />
        </div>
        <div class="flex flex-col">
          <span
            class="font-bold text-lg md:text-xl text-text-primary tracking-tight"
            >Spentiva</span
          >
          <span
            class="text-[9px] md:text-[10px] tracking-wider text-text-secondary font-medium uppercase"
            >By Exyconn</span
          >
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center md:space-x-5 lg:space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class={`cursor-pointer text-sm font-medium transition-all duration-300 hover:scale-105 ${
                currentPath === item.href
                  ? "text-primary-400"
                  : "text-text-secondary hover:text-primary-400"
              }`}
              aria-label={item.name}
              aria-current={currentPath === item.href ? "page" : undefined}
            >
              {item.name}
            </a>
          ))
        }
        <div
          class="flex items-center space-x-4 pl-4 border-l border-border-light/50"
        >
          <a
            href="https://app.spentiva.com/login"
            class="cursor-pointer text-sm font-semibold text-text-secondary hover:text-primary-400 transition-all duration-300"
            aria-label="Log in to your account"
          >
            Log in
          </a>
          <a
            href="https://app.spentiva.com/signup"
            class="ml-5 cursor-pointer inline-flex items-center px-5 py-2.5 bg-primary-400 text-white text-sm font-semibold rounded-lg hover:bg-primary-500 transition-all duration-300 shadow-lg shadow-primary-400/25 hover:shadow-primary-400/40 hover:scale-105"
            aria-label="Sign up for free"
          >
            Sign up
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="cursor-pointer md:hidden p-2 text-text-secondary hover:bg-gray-100/50 rounded-lg transition-all duration-300"
        aria-label="Toggle navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <i class="fas fa-bars text-xl" aria-hidden="true"></i>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden md:hidden pb-4 border-t border-border-light/50 mt-2 pt-4"
      role="menu"
    >
      <div class="flex flex-col space-y-2">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class={`cursor-pointer px-4 py-3 rounded-lg text-sm font-medium transition-all duration-300 ${
                currentPath === item.href
                  ? "bg-primary-50 text-primary-400"
                  : "text-text-secondary hover:bg-gray-50"
              }`}
              role="menuitem"
              aria-label={item.name}
              aria-current={currentPath === item.href ? "page" : undefined}
            >
              {item.name}
            </a>
          ))
        }
        <div
          class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-border-light/50"
        >
          <a
            href="https://app.spentiva.com/login"
            class="cursor-pointer flex items-center justify-center px-4 py-2.5 border border-border-default text-text-secondary font-semibold rounded-lg hover:bg-gray-50 transition-all duration-300"
            aria-label="Log in to your account"
          >
            Log in
          </a>
          <a
            href="https://app.spentiva.com/signup"
            class="cursor-pointer flex items-center justify-center px-4 py-2.5 bg-primary-400 text-white font-semibold rounded-lg hover:bg-primary-500 transition-all duration-300 shadow-lg shadow-primary-400/20"
            aria-label="Sign up for free"
          >
            Sign up
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16 md:h-20"></div>
