---
import Newsletter from "./Newsletter.astro";

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "/#features" },
    { name: "Pricing", href: "/pricing" },
    { name: "Use Cases", href: "/use-cases" },
    { name: "FAQ", href: "/#faq" },
  ],
  resources: [
    { name: "Upcoming Features", href: "/upcoming-features" },
    { name: "Blog", href: "/blog" },
    { name: "About Us", href: "/about" },
    { name: "Contact", href: "/contact" },
  ],
  legal: [
    { name: "Privacy Policy", href: "/privacy-policy" },
    { name: "Terms & Conditions", href: "/terms-and-conditions" },
    { name: "Data Policy", href: "/data-policy" },
    { name: "Cookie Policy", href: "/cookie-policy" },
  ],
};

const socialLinks = [
  {
    name: "Facebook",
    icon: "fab fa-facebook",
    href: "#",
    label: "Visit our Facebook page",
  },
  {
    name: "Twitter",
    icon: "fab fa-twitter",
    href: "#",
    label: "Follow us on Twitter",
  },
  {
    name: "LinkedIn",
    icon: "fab fa-linkedin",
    href: "#",
    label: "Connect on LinkedIn",
  },
  {
    name: "Instagram",
    icon: "fab fa-instagram",
    href: "#",
    label: "Follow us on Instagram",
  },
];
---

<footer
  class="bg-white border-t border-border-light pt-16 pb-8"
  role="contentinfo"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <Newsletter />

    <!-- Footer Links -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12 mb-16">
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-6">
          <div
            class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center"
          >
            <img
              src="/logo.svg"
              alt="Spentiva Logo"
              class="w-full h-full filter drop-shadow-sm"
              width="48"
              height="48"
            />
          </div>
          <div class="flex flex-col">
            <span
              class="font-bold text-lg md:text-xl text-text-primary tracking-tight"
              >Spentiva</span
            >
            <span
              class="text-[9px] md:text-[10px] tracking-wider text-text-secondary font-medium uppercase"
              >By Exyconn</span
            >
          </div>
        </div>
        <p class="text-text-secondary mb-8 max-w-sm leading-relaxed">
          AI-powered expense tracking made simple. Track, analyze, and optimize
          your spending with intelligent insights.
        </p>

        <!-- Auth Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 mb-8">
          <a
            href="https://app.spentiva.com/login"
            class="cursor-pointer inline-flex items-center justify-center px-6 py-3 border-2 border-primary-400 text-primary-400 font-semibold rounded-lg hover:bg-primary-50 transition-all duration-300 text-sm hover:scale-105"
            aria-label="Log in to your account"
          >
            <i class="fas fa-sign-in-alt mr-2" aria-hidden="true"></i>
            Log in
          </a>
          <a
            href="https://app.spentiva.com/signup"
            class="cursor-pointer inline-flex items-center justify-center px-6 py-3 bg-primary-400 text-white font-semibold rounded-lg hover:bg-primary-500 transition-all duration-300 shadow-lg shadow-primary-400/25 text-sm hover:scale-105"
            aria-label="Sign up for free account"
          >
            <i class="fas fa-rocket mr-2" aria-hidden="true"></i>
            Sign up Free
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                class="cursor-pointer w-10 h-10 bg-background-surfaceAlt rounded-lg flex items-center justify-center text-text-secondary hover:bg-primary-400 hover:text-white transition-all duration-300 transform hover:-translate-y-1 hover:scale-110"
                aria-label={social.label}
              >
                <i class={`${social.icon} text-lg`} aria-hidden="true" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="font-bold text-text-primary mb-6">Product</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-text-secondary hover:text-primary-400 transition-all duration-300 hover:translate-x-1 inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="font-bold text-text-primary mb-6">Resources</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.resources.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-text-secondary hover:text-primary-400 transition-all duration-300 hover:translate-x-1 inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="font-bold text-text-primary mb-6">Legal</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-text-secondary hover:text-primary-400 transition-all duration-300 hover:translate-x-1 inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-border-light">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-sm text-text-placeholder">
          Â© {currentYear} Spentiva by Exyconn. All rights reserved.
        </p>
        <div class="flex items-center space-x-8 text-sm text-text-secondary">
          <a
            href="/privacy-policy"
            class="cursor-pointer hover:text-primary-400 transition-colors"
            aria-label="Privacy Policy">Privacy</a
          >
          <a
            href="/terms-and-conditions"
            class="cursor-pointer hover:text-primary-400 transition-colors"
            aria-label="Terms and Conditions">Terms</a
          >Data Policy
        </div>
        <a
          href="/cookie-policy"
          class="cursor-pointer hover:text-primary-400 transition-colors"
          aria-label="Cookie Policy">Cookies</a
        >
      </div>
    </div>
  </div>
</footer>
