---
import Newsletter from "./Newsletter.astro";

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "/#features" },
    { name: "Pricing", href: "/pricing" },
    { name: "Use Cases", href: "/use-cases" },
    { name: "FAQ", href: "/#faq" },
  ],
  resources: [
    { name: "Upcoming Features", href: "/upcoming-features" },
    { name: "Blog", href: "/blog" },
    { name: "About Us", href: "/about" },
    { name: "Contact", href: "/contact" },
  ],
  legal: [
    { name: "Privacy Policy", href: "/privacy-policy" },
    { name: "Terms & Conditions", href: "/terms-and-conditions" },
    { name: "Data Policy", href: "/data-policy" },
    { name: "Cookie Policy", href: "/cookie-policy" },
  ],
};

const socialLinks = [
  {
    name: "Facebook",
    icon: "fab fa-facebook",
    href: "#",
    label: "Visit our Facebook page",
  },
  {
    name: "Twitter",
    icon: "fab fa-twitter",
    href: "#",
    label: "Follow us on Twitter",
  },
  {
    name: "LinkedIn",
    icon: "fab fa-linkedin",
    href: "#",
    label: "Connect on LinkedIn",
  },
  {
    name: "Instagram",
    icon: "fab fa-instagram",
    href: "#",
    label: "Follow us on Instagram",
  },
];
---

<footer class="bg-white border-t border-gray-100 pt-16 pb-8" role="contentinfo">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <Newsletter />

    <!-- Footer Links -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 mb-16 pt-8"
    >
      <!-- Brand Section -->
      <div class="lg:col-span-4">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-10 h-10 flex items-center justify-center">
            <img
              src="/logo.svg"
              alt="Spentiva Logo"
              class="w-full h-full"
              width="40"
              height="40"
            />
          </div>
          <div class="flex flex-col">
            <span
              class="font-bold text-xl text-gray-900 tracking-tight leading-none"
              >Spentiva</span
            >
            <span
              class="text-[10px] tracking-widest text-gray-500 font-medium uppercase leading-none mt-1"
              >By Exyconn</span
            >
          </div>
        </div>
        <p class="text-gray-600 mb-8 max-w-sm leading-relaxed text-sm">
          AI-powered expense tracking made simple. Track, analyze, and optimize
          your spending with intelligent insights.
        </p>

        <!-- Social Links -->
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                class="cursor-pointer w-10 h-10 bg-gray-50 rounded-xl flex items-center justify-center text-gray-500 hover:bg-primary-600 hover:text-white transition-all duration-300 hover:-translate-y-1"
                aria-label={social.label}
              >
                <i class={`${social.icon} text-lg`} aria-hidden="true" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Spacer -->
      <div class="hidden lg:block lg:col-span-1"></div>

      <!-- Product Links -->
      <div class="lg:col-span-2">
        <h3 class="font-bold text-gray-900 mb-6">Product</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.product.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-gray-600 hover:text-primary-600 transition-colors duration-200 text-sm font-medium inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources Links -->
      <div class="lg:col-span-2">
        <h3 class="font-bold text-gray-900 mb-6">Resources</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.resources.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-gray-600 hover:text-primary-600 transition-colors duration-200 text-sm font-medium inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal Links -->
      <div class="lg:col-span-3">
        <h3 class="font-bold text-gray-900 mb-6">Legal</h3>
        <ul class="space-y-4" role="list">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="cursor-pointer text-gray-600 hover:text-primary-600 transition-colors duration-200 text-sm font-medium inline-block"
                  aria-label={link.name}
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-gray-100">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-sm text-gray-500">
          Â© {currentYear} Spentiva by Exyconn. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm text-gray-500">
          <a
            href="/privacy-policy"
            class="cursor-pointer hover:text-primary-600 transition-colors"
            aria-label="Privacy Policy">Privacy</a
          >
          <a
            href="/terms-and-conditions"
            class="cursor-pointer hover:text-primary-600 transition-colors"
            aria-label="Terms and Conditions">Terms</a
          >
          <a
            href="/cookie-policy"
            class="cursor-pointer hover:text-primary-600 transition-colors"
            aria-label="Cookie Policy">Cookies</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
