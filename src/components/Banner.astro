<section
  class="relative overflow-hidden min-h-[600px] md:min-h-[700px] flex items-center"
  style="background-image: url('/hero-bg-13-b.jpg'); background-size: cover; background-position: center;"
  role="region"
  aria-label="Hero banner"
>
  <!-- Enhanced Overlay for better contrast -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-teal-700/40 via-teal-600/30 to-orange-600/40"
  >
  </div>

  <div
    id="main-content"
    class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl py-16 sm:py-20 lg:py-24 relative z-10"
  >
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="fade-in-up">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white tracking-tight drop-shadow-2xl"
        >
          Smart Expenses Tracking <br class="hidden lg:block" />
          <span class="text-teal-100">Powered by AI</span>
        </h1>
        <p
          class="text-lg md:text-xl mb-8 text-white leading-relaxed max-w-lg drop-shadow-lg font-medium"
        >
          Track, analyze, and optimize your spending with intelligent insights.
          Take control of your finances effortlessly.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="https://app.spentiva.com/signup"
            class="cursor-pointer inline-flex items-center justify-center px-8 py-4 bg-white text-teal-700 font-semibold rounded-xl hover:bg-teal-50 hover:scale-105 transition-all duration-300 shadow-2xl hover:shadow-3xl text-base"
            aria-label="Sign up for free account"
          >
            <i class="fas fa-rocket mr-2" aria-hidden="true"></i>
            Get Started Free
          </a>
          <a
            href="#features"
            class="cursor-pointer inline-flex items-center justify-center px-8 py-4 bg-white/20 backdrop-blur-md border-2 border-white/40 text-white font-semibold rounded-xl hover:bg-white/30 hover:scale-105 transition-all duration-300 shadow-xl text-base"
            aria-label="Learn more about features"
          >
            <i class="fas fa-play-circle mr-2" aria-hidden="true"></i>
            Learn More
          </a>
        </div>
        <div
          class="mt-10 flex flex-wrap items-center gap-6 text-sm font-medium text-white"
        >
          <div class="flex items-center">
            <i
              class="fas fa-check-circle mr-2 text-teal-100 text-lg"
              aria-hidden="true"></i>
            <span>No credit card required</span>
          </div>
          <div class="flex items-center">
            <i
              class="fas fa-check-circle mr-2 text-teal-100 text-lg"
              aria-hidden="true"></i>
            <span>Free forever plan</span>
          </div>
        </div>
      </div>

      <div class="hidden lg:block relative fade-in-up">
        <div class="relative animate-float">
          <!-- Enhanced decorative background -->
          <div
            class="absolute -inset-6 bg-white/15 rounded-full blur-3xl backdrop-blur-sm"
          >
          </div>

          <div
            class="relative bg-white/98 backdrop-blur-lg rounded-2xl shadow-2xl border border-white/30 p-8"
          >
            <div class="flex items-center justify-between mb-8">
              <div>
                <h3 class="text-lg font-bold text-gray-800">
                  Recent Transactions
                </h3>
                <p class="text-sm text-gray-600">Today, 24 Oct</p>
              </div>
              <div
                class="w-10 h-10 bg-teal-50 rounded-full flex items-center justify-center text-teal-600"
              >
                <i class="fas fa-ellipsis-h" aria-hidden="true"></i>
              </div>
            </div>

            <div class="space-y-4">
              <div
                class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-teal-200 transition-all duration-300 group cursor-pointer hover:scale-105"
                role="article"
                aria-label="Grocery transaction"
              >
                <div class="flex items-center space-x-4">
                  <div
                    class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center text-green-600 group-hover:scale-110 transition-transform"
                  >
                    <i class="fas fa-shopping-cart" aria-hidden="true"></i>
                  </div>
                  <div>
                    <p class="font-bold text-gray-800">Groceries</p>
                    <p class="text-xs text-gray-600">Walmart Supercenter</p>
                  </div>
                </div>
                <span class="font-bold text-gray-800">-$85.50</span>
              </div>

              <div
                class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-teal-200 transition-all duration-300 group cursor-pointer hover:scale-105"
                role="article"
                aria-label="Coffee transaction"
              >
                <div class="flex items-center space-x-4">
                  <div
                    class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform"
                  >
                    <i class="fas fa-coffee" aria-hidden="true"></i>
                  </div>
                  <div>
                    <p class="font-bold text-gray-800">Coffee Break</p>
                    <p class="text-xs text-gray-600">Starbucks</p>
                  </div>
                </div>
                <span class="font-bold text-gray-800">-$5.75</span>
              </div>

              <div
                class="flex items-center justify-between p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-teal-200 transition-all duration-300 group cursor-pointer hover:scale-105"
                role="article"
                aria-label="Fuel transaction"
              >
                <div class="flex items-center space-x-4">
                  <div
                    class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center text-purple-600 group-hover:scale-110 transition-transform"
                  >
                    <i class="fas fa-car" aria-hidden="true"></i>
                  </div>
                  <div>
                    <p class="font-bold text-gray-800">Fuel Refill</p>
                    <p class="text-xs text-gray-600">Shell Station</p>
                  </div>
                </div>
                <span class="font-bold text-gray-800">-$45.00</span>
              </div>
            </div>

            <div
              class="mt-6 pt-6 border-t border-gray-200 flex justify-between items-center"
            >
              <span class="text-sm font-medium text-gray-600">Total Spent</span>
              <span class="text-xl font-bold text-gray-800">$136.25</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
