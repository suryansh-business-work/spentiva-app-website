---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const contactInfo = [
  {
    icon: "fas fa-envelope",
    title: "Email Us",
    content: "support@spentiva.com",
    link: "mailto:support@spentiva.com",
  },
  {
    icon: "fas fa-globe",
    title: "We Work Remotely",
    content: "Our team is distributed worldwide",
    link: "#",
  },
];
---

<BaseLayout
  title="Contact Us - Spentiva by Exyconn"
  description="Get in touch with our team. We're here to help you with any questions or support needs."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-primary-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center translate-y-4 transition-all duration-700 ease-out"
      >
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary tracking-tight"
        >
          Get in Touch
        </h1>
        <p
          class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed"
        >
          Have questions? We'd love to hear from you. Send us a message and
          we'll respond as soon as possible.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-16">
        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <div
            class="bg-background-base rounded-xl border border-border-light p-8"
          >
            <h3 class="text-xl font-bold text-text-primary mb-6">
              Contact Information
            </h3>
            <div class="space-y-6">
              {
                contactInfo.map((item) => (
                  <a
                    href={item.link}
                    class="cursor-pointer flex items-start group"
                  >
                    <div class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary-100 transition-colors">
                      <i class={`${item.icon} text-primary-400`} />
                    </div>
                    <div class="ml-4">
                      <p class="text-sm font-medium text-text-secondary mb-1">
                        {item.title}
                      </p>
                      <p class="text-text-primary font-semibold group-hover:text-primary-400 transition-colors">
                        {item.content}
                      </p>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>

          <div
            class="bg-background-surfaceAlt rounded-xl border border-border-light p-8"
          >
            <h3 class="text-xl font-bold text-text-primary mb-4">
              Support Hours
            </h3>
            <p class="text-text-secondary mb-4">
              Our dedicated support team is available to assist you during the
              following hours:
            </p>
            <ul class="space-y-2 text-sm text-text-primary font-medium">
              <li class="flex justify-between">
                <span>Monday - Friday:</span>
                <span>9:00 AM - 6:00 PM EST</span>
              </li>
              <li class="flex justify-between">
                <span>Saturday:</span>
                <span>10:00 AM - 4:00 PM EST</span>
              </li>
              <li class="flex justify-between text-text-secondary">
                <span>Sunday:</span>
                <span>Closed</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div
            class="bg-white rounded-2xl shadow-xl border border-border-light p-8 md:p-10"
          >
            <h2 class="text-2xl font-bold text-text-primary mb-6">
              Send us a Message
            </h2>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-6">
                <div class="form-group">
                  <label for="firstName" class="form-label">First Name</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="form-input"
                    placeholder="John"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="lastName" class="form-label">Last Name</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="form-input"
                    placeholder="Doe"
                    required
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  placeholder="john@example.com"
                  required
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label">Subject</label>
                <select id="subject" name="subject" class="form-input">
                  <option value="">Select a topic</option>
                  <option value="support">Technical Support</option>
                  <option value="billing">Billing & Subscription</option>
                  <option value="partnership">Partnership Inquiry</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message" class="form-label">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="form-input"
                  placeholder="How can we help you?"
                  required></textarea>
              </div>

              <div class="flex items-center">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  class="form-checkbox"
                  required
                />
                <label for="privacy" class="ml-2 text-sm text-text-secondary">
                  I agree to the <a
                    href="/privacy-policy"
                    class="cursor-pointer text-primary-400 hover:underline"
                    >Privacy Policy</a
                  > and <a
                    href="/terms-and-conditions"
                    class="cursor-pointer text-primary-400 hover:underline"
                    >Terms of Service</a
                  >.
                </label>
              </div>

              <button
                type="submit"
                class="cursor-pointer w-full inline-flex items-center justify-center px-8 py-4 bg-primary-400 text-white font-semibold rounded-xl hover:bg-primary-500 transform hover:-translate-y-1 transition-all shadow-lg shadow-primary-400/25 text-base"
              >
                <i class="fas fa-paper-plane mr-2"></i>
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
