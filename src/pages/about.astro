---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const stats = [
  { number: "50K+", label: "Active Users" },
  { number: "150+", label: "Countries" },
  { number: "$10M+", label: "Expenses Tracked" },
  { number: "4.9/5", label: "App Store Rating" },
];

const team = [
  {
    name: "Alex Morgan",
    role: "CEO & Co-founder",
    image: "https://i.pravatar.cc/300?img=11",
    bio: "Former fintech executive with a passion for personal finance.",
  },
  {
    name: "Sarah Chen",
    role: "CTO & Co-founder",
    image: "https://i.pravatar.cc/300?img=5",
    bio: "AI researcher turned entrepreneur, building smarter financial tools.",
  },
  {
    name: "David Kim",
    role: "Head of Product",
    image: "https://i.pravatar.cc/300?img=3",
    bio: "Product visionary focused on creating intuitive user experiences.",
  },
];

const values = [
  {
    icon: "fas fa-lock",
    title: "Privacy First",
    description:
      "We believe your financial data belongs to you. We never sell your personal information.",
  },
  {
    icon: "fas fa-lightbulb",
    title: "Innovation",
    description:
      "We constantly push the boundaries of what's possible with AI in personal finance.",
  },
  {
    icon: "fas fa-users",
    title: "Community",
    description:
      "We build for our users, listening to feedback and evolving with their needs.",
  },
];
---

<BaseLayout
  title="About Us - Spentiva by Exyconn"
  description="Learn about our mission to democratize personal finance management through AI."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-primary-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center translate-y-4 transition-all duration-700 ease-out"
      >
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary tracking-tight"
        >
          Empowering Financial Freedom
        </h1>
        <p
          class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed"
        >
          We're on a mission to make personal finance management accessible,
          intelligent, and effortless for everyone.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b border-border-light">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {
          stats.map((stat) => (
            <div class="p-4">
              <div class="text-3xl md:text-4xl font-bold text-primary-400 mb-2">
                {stat.number}
              </div>
              <div class="text-text-secondary font-medium">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="relative">
          <div
            class="absolute -top-4 -left-4 w-24 h-24 bg-primary-100 rounded-full blur-2xl"
          >
          </div>
          <div
            class="absolute -bottom-4 -right-4 w-32 h-32 bg-accent-100 rounded-full blur-2xl"
          >
          </div>
          <img
            src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80"
            alt="Team collaboration"
            class="relative rounded-2xl shadow-xl w-full object-cover h-[400px] lg:h-[500px]"
          />
        </div>
        <div>
          <h2
            class="text-3xl sm:text-4xl font-bold text-text-primary mb-6 tracking-tight"
          >
            Our Story
          </h2>
          <div class="space-y-6 text-lg text-text-secondary leading-relaxed">
            <p>
              Founded in 2023, Spentiva emerged from a simple observation:
              managing personal finances was too complicated, time-consuming,
              and disconnected from people's daily lives.
            </p>
            <p>
              We realized that while everyone needed better financial tools,
              existing solutions remained stuck in standalone apps that required
              manual entry and constant attention.
            </p>
            <p>
              By combining intuitive design with the power of Artificial
              Intelligence, we created a solution that meets users where they
              are. Today, Spentiva helps thousands of people across the globe
              take control of their financial future with simple, intelligent
              interactions.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-background-surfaceAlt border-y border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h2
          class="text-3xl sm:text-4xl font-bold text-text-primary mb-4 tracking-tight"
        >
          Our Core Values
        </h2>
        <p class="text-lg text-text-secondary">
          The principles that guide everything we do
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {
          values.map((value, index) => (
            <div
              class="bg-white rounded-xl border border-border-light p-8 hover:border-primary-200 hover:shadow-lg transition-all duration-300 text-center group translate-y-4 ease-out"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="w-16 h-16 bg-primary-50 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <i class={`${value.icon} text-2xl text-primary-400`} />
              </div>
              <h3 class="text-xl font-bold text-text-primary mb-4">
                {value.title}
              </h3>
              <p class="text-text-secondary leading-relaxed">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h2
          class="text-3xl sm:text-4xl font-bold text-text-primary mb-4 tracking-tight"
        >
          Meet the Team
        </h2>
        <p class="text-lg text-text-secondary">
          The passionate people behind Spentiva
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {
          team.map((member, index) => (
            <div
              class="group text-center translate-y-4 transition-all duration-700 ease-out"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="relative mb-6 inline-block">
                <div class="absolute inset-0 bg-primary-400 rounded-full opacity-0 group-hover:opacity-10 transition-opacity duration-300 transform scale-105" />
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-48 h-48 rounded-full object-cover shadow-lg border-4 border-white group-hover:border-primary-50 transition-colors duration-300"
                />
              </div>
              <h3 class="text-xl font-bold text-text-primary mb-1">
                {member.name}
              </h3>
              <p class="text-primary-400 font-medium mb-3">{member.role}</p>
              <p class="text-text-secondary text-sm max-w-xs mx-auto">
                {member.bio}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-primary-50 border-t border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2
        class="text-3xl md:text-4xl font-bold mb-6 text-text-primary tracking-tight"
      >
        Join Our Journey
      </h2>
      <p
        class="text-xl mb-10 text-text-secondary max-w-2xl mx-auto leading-relaxed"
      >
        Be part of the financial revolution. Start managing your money smarter
        today.
      </p>
      <a
        href="https://app.spentiva.com/signup"
        class="inline-flex items-center justify-center px-8 py-4 bg-primary-400 text-white font-semibold rounded-xl hover:bg-primary-500 transform hover:-translate-y-1 transition-all shadow-lg shadow-primary-400/25 text-base"
      >
        <i class="fas fa-rocket mr-2"></i>
        Get Started Free
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>
