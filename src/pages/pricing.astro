---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const plans = [
  {
    name: "Free",
    price: "$0",
    period: "/month",
    description: "Perfect for individuals just starting out.",
    features: [
      { text: "Manual Expense Tracking", included: true },
      { text: "Basic Reports", included: true },
      { text: "WhatsApp Integration (Limited)", included: true },
      { text: "1 Bank Account Link", included: true },
      { text: "AI Insights", included: false },
      { text: "Priority Support", included: false },
    ],
    cta: "Get Started",
    ctaLink: "https://app.spentiva.com/signup",
    popular: false,
  },
  {
    name: "Pro",
    price: "$9.99",
    period: "/month",
    description: "For power users who want full control.",
    features: [
      { text: "Unlimited Expense Tracking", included: true },
      { text: "Advanced Analytics & Reports", included: true },
      { text: "Unlimited WhatsApp Integration", included: true },
      { text: "Unlimited Bank Accounts", included: true },
      { text: "AI-Powered Insights", included: true },
      { text: "Priority Support", included: true },
    ],
    cta: "Start Free Trial",
    ctaLink: "https://app.spentiva.com/signup?plan=pro",
    popular: true,
  },
  {
    name: "Business",
    price: "$29.99",
    period: "/month",
    description: "Ideal for small businesses and teams.",
    features: [
      { text: "Everything in Pro", included: true },
      { text: "Team Management", included: true },
      { text: "Expense Approval Flows", included: true },
      { text: "Custom Categories", included: true },
      { text: "API Access", included: true },
      { text: "Dedicated Account Manager", included: true },
    ],
    cta: "Contact Sales",
    ctaLink: "/contact",
    popular: false,
  },
];

const faqs = [
  {
    question: "Can I switch plans later?",
    answer:
      "Yes, you can upgrade or downgrade your plan at any time from your account settings.",
  },
  {
    question: "Is there a free trial for the Pro plan?",
    answer:
      "Yes, we offer a 14-day free trial for the Pro plan. No credit card required to start.",
  },
  {
    question: "What payment methods do you accept?",
    answer:
      "We accept all major credit cards (Visa, MasterCard, Amex) and PayPal.",
  },
  {
    question: "Can I cancel my subscription?",
    answer:
      "Absolutely. You can cancel your subscription at any time without any cancellation fees.",
  },
];
---

<BaseLayout
  title="Pricing - Spentiva by Exyconn"
  description="Choose the perfect plan for your financial needs. Transparent pricing with no hidden fees."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-primary-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center translate-y-4 transition-all duration-700 ease-out"
      >
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary tracking-tight"
        >
          Simple, Transparent Pricing
        </h1>
        <p
          class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed"
        >
          Choose the plan that fits your financial journey. No hidden fees,
          cancel anytime.
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white -mt-10 relative z-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid md:grid-cols-3 gap-8">
        {
          plans.map((plan, index) => (
            <div
              class={`relative bg-white rounded-2xl shadow-xl border ${plan.popular ? "border-primary-400 ring-4 ring-primary-400/10" : "border-border-light"} p-8 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 flex flex-col h-full`}
            >
              {plan.popular && (
                <div class="absolute top-0 right-0 bg-primary-400 text-white text-xs font-bold px-3 py-1 rounded-bl-lg rounded-tr-lg uppercase tracking-wider">
                  Most Popular
                </div>
              )}
              <div class="mb-8">
                <h3 class="text-2xl font-bold text-text-primary mb-2">
                  {plan.name}
                </h3>
                <p class="text-text-secondary text-sm mb-6">
                  {plan.description}
                </p>
                <div class="flex items-baseline">
                  <span class="text-4xl font-bold text-text-primary">
                    {plan.price}
                  </span>
                  <span class="text-text-secondary ml-1">{plan.period}</span>
                </div>
              </div>

              <ul class="space-y-4 mb-8 flex-grow">
                {plan.features.map((feature) => (
                  <li class="flex items-start">
                    <i
                      class={`fas ${feature.included ? "fa-check-circle text-success" : "fa-times-circle text-border-dark"} mt-1 mr-3 text-lg`}
                    />
                    <span
                      class={`text-sm ${feature.included ? "text-text-primary" : "text-text-placeholder"}`}
                    >
                      {feature.text}
                    </span>
                  </li>
                ))}
              </ul>

              <a
                href={plan.ctaLink}
                class={`w-full text-center inline-flex items-center justify-center px-6 py-3 font-semibold rounded-xl transform hover:-translate-y-1 transition-all shadow-lg text-base ${
                  plan.popular
                    ? "bg-primary-400 text-white hover:bg-primary-500 shadow-primary-400/25"
                    : "bg-background-surfaceAlt text-primary-400 hover:bg-primary-50 border border-transparent hover:border-primary-200"
                }`}
              >
                {plan.cta}
              </a>
            </div>
          ))
        }
      </div>
      <tbody class="divide-y divide-gray-200">
        <tr>
          <td class="py-4 px-6 text-gray-700">Number of Trackers</td>
          <td class="text-center py-4 px-6">1</td>
          <td class="text-center py-4 px-6 bg-primary-50">5</td>
          <td class="text-center py-4 px-6">Unlimited</td>
        </tr>
        <tr>
          <td class="py-4 px-6 text-gray-700">Expenses per Month</td>
          <td class="text-center py-4 px-6">100</td>
          <td class="text-center py-4 px-6 bg-primary-50">Unlimited</td>
          <td class="text-center py-4 px-6">Unlimited</td>
        </tr>
        <tr>
          <td class="py-4 px-6 text-gray-700">AI Categorization</td>
          <td class="text-center py-4 px-6"
            ><i class="fas fa-check text-green-500"></i></td
          >
          <td class="text-center py-4 px-6 bg-primary-50"
            ><i class="fas fa-check text-green-500"></i></td
          >
          <td class="text-center py-4 px-6"
            ><i class="fas fa-check text-green-500"></i></td
          >
        </tr>
        <tr>
          <td class="py-4 px-6 text-gray-700">Advanced Analytics</td>
          <td class="text-center py-4 px-6"
            ><i class="fas fa-times text-gray-300"></i></td
          >
          <td class="text-center py-4 px-6 bg-primary-50"
            ><i class="fas fa-check text-green-500"></i></td
          >
          <td class="text-center py-4 px-6"
            ><i class="fas fa-check text-green-500"></i></td
          >
        </tr>
        <tr>
          <td class="py-4 px-6 text-gray-700">Team Collaboration</td>
          <td class="text-center py-4 px-6"
            ><i class="fas fa-times text-gray-300"></i></td
          >
          <td class="text-center py-4 px-6 bg-primary-50"
            ><i class="fas fa-times text-gray-300"></i></td
          >
          <td class="text-center py-4 px-6"
            ><i class="fas fa-check text-green-500"></i></td
          >
        </tr>
        <tr>
          <td class="py-4 px-6 text-gray-700">Priority Support</td>
          <td class="text-center py-4 px-6"
            ><i class="fas fa-times text-gray-300"></i></td
          >
          <td class="text-center py-4 px-6 bg-primary-50"
            ><i class="fas fa-check text-green-500"></i></td
          >
          <td class="text-center py-4 px-6"
            ><i class="fas fa-check text-green-500"></i></td
          >
        </tr>
      </tbody>
    </div>
  </section>
</BaseLayout>

<!-- FAQ Section -->
<section class="py-16 sm:py-20 lg:py-24 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 observe-animation">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Pricing FAQs
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
        Common questions about our pricing plans
      </p>
    </div>
    <div class="max-w-3xl mx-auto space-y-4">
      {
        faqs.map((faq, index) => (
          <div
            class="bg-white rounded-xl shadow-md p-6 observe-animation"
            style={`animation-delay: ${index * 0.05}s`}
          >
            <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-start">
              <i class="fas fa-question-circle text-primary-400 mr-3 mt-1" />
              {faq.question}
            </h3>
            <p class="text-gray-600 ml-8">{faq.answer}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<!-- CTA Section -->
<section
  class="py-16 sm:py-20 lg:py-24 bg-gradient-to-r from-primary-300 via-primary-400 to-accent-400 text-white"
>
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 text-center observe-animation"
  >
    <h2 class="text-4xl md:text-5xl font-bold mb-6">Ready to Get Started?</h2>
    <p class="text-xl mb-8 text-primary-50 max-w-2xl mx-auto">
      Join thousands of users managing their expenses smarter with Spentiva.
    </p>
    <a
      href="https://app.spentiva.com/signup"
      class="inline-flex items-center px-6 py-3 bg-white text-primary-400 font-semibold rounded-lg hover:bg-gray-50 transform hover:scale-105 transition-all shadow-lg"
    >
      <i class="fas fa-rocket mr-2"></i>
      Start Your Free Trial
    </a>
  </div>
</section>

<Footer />
