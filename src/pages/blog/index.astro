---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const posts = [
  {
    title: "How to Save Money on Groceries Without Coupons",
    excerpt:
      "Discover practical tips and tricks to reduce your grocery bill without spending hours clipping coupons.",
    date: "October 24, 2023",
    author: "Sarah Chen",
    category: "Savings",
    slug: "save-money-groceries",
    image:
      "https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
  {
    title: "The Psychology of Spending: Why We Buy What We Buy",
    excerpt:
      "Understand the hidden triggers that cause impulse spending and learn how to overcome them.",
    date: "October 18, 2023",
    author: "Dr. Alex Morgan",
    category: "Behavior",
    slug: "psychology-of-spending",
    image:
      "https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
  {
    title: "5 Investment Myths That Are Holding You Back",
    excerpt:
      "Debunking common misconceptions about investing that might be preventing you from building wealth.",
    date: "October 12, 2023",
    author: "David Kim",
    category: "Investing",
    slug: "investment-myths",
    image:
      "https://images.unsplash.com/photo-1579532537598-459ecdaf39cc?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
  {
    title: "Budgeting for Freelancers: A Complete Guide",
    excerpt:
      "How to manage irregular income, save for taxes, and build a safety net when you work for yourself.",
    date: "October 5, 2023",
    author: "Sarah Chen",
    category: "Freelancing",
    slug: "budgeting-for-freelancers",
    image:
      "https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
  {
    title: "The Ultimate Guide to Emergency Funds",
    excerpt:
      "Why you need one, how much to save, and where to keep it for maximum security and growth.",
    date: "September 28, 2023",
    author: "David Kim",
    category: "Financial Planning",
    slug: "emergency-funds-guide",
    image:
      "https://images.unsplash.com/photo-1565514020176-dbf2277f18f3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
  {
    title: "Travel on a Budget: See the World for Less",
    excerpt:
      "Expert hacks for finding cheap flights, affordable accommodation, and hidden gems around the globe.",
    date: "September 20, 2023",
    author: "Alex Morgan",
    category: "Travel",
    slug: "travel-on-budget",
    image:
      "https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
  },
];
---

<BaseLayout
  title="Blog - Spentiva by Exyconn"
  description="Expert advice, tips, and insights on personal finance, budgeting, and wealth building."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-primary-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center translate-y-4 transition-all duration-700 ease-out"
      >
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary tracking-tight"
        >
          Financial Wisdom
        </h1>
        <p
          class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed"
        >
          Expert advice, tips, and insights to help you master your money and
          build wealth.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          posts.map((post, index) => (
            <article
              class="bg-white rounded-2xl shadow-lg border border-border-light overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex flex-col h-full group translate-y-4 ease-out"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <a
                href={`/blog/${post.slug}`}
                class="block overflow-hidden h-48 relative"
              >
                <div class="absolute inset-0 bg-primary-900/10 group-hover:bg-transparent transition-colors z-10" />
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute top-4 left-4 z-20">
                  <span class="bg-white/90 backdrop-blur-sm text-primary-500 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider shadow-sm">
                    {post.category}
                  </span>
                </div>
              </a>
              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center text-sm text-text-secondary mb-3">
                  <span>{post.date}</span>
                  <span class="mx-2">â€¢</span>
                  <span>{post.author}</span>
                </div>
                <h2 class="text-xl font-bold text-text-primary mb-3 group-hover:text-primary-400 transition-colors">
                  <a href={`/blog/${post.slug}`}>{post.title}</a>
                </h2>
                <p class="text-text-secondary text-sm leading-relaxed mb-4 flex-grow">
                  {post.excerpt}
                </p>
                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary-400 font-semibold hover:text-primary-500 transition-colors mt-auto"
                >
                  Read Article{" "}
                  <i class="fas fa-arrow-right ml-2 text-xs transition-transform group-hover:translate-x-1" />
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-background-surfaceAlt border-t border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div
        class="bg-primary-400 rounded-3xl p-8 md:p-12 lg:p-16 text-center relative overflow-hidden"
      >
        <div class="absolute top-0 left-0 w-full h-full bg-pattern opacity-10">
        </div>
        <div class="relative z-10 max-w-2xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Subscribe to Our Newsletter
          </h2>
          <p class="text-primary-50 mb-8 text-lg">
            Get the latest financial tips, news, and updates delivered straight
            to your inbox.
          </p>
          <form class="flex flex-col sm:flex-row gap-4">
            <input
              type="email"
              placeholder="Enter your email address"
              class="flex-grow px-6 py-4 rounded-xl text-text-primary focus:outline-none focus:ring-2 focus:ring-white/50 border-0 shadow-lg"
              required
            />
            <button
              type="submit"
              class="px-8 py-4 bg-gray-900 text-white font-bold rounded-xl hover:bg-gray-800 transition-colors shadow-lg"
            >
              Subscribe
            </button>
          </form>
          <p class="text-primary-100 text-sm mt-4">
            No spam, ever. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
