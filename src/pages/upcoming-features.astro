---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const upcomingFeatures = [
  {
    title: "WhatsApp Integration",
    icon: "fab fa-whatsapp",
    status: "Coming Q1 2026",
    description:
      "Track expenses effortlessly via WhatsApp messages. No app installation needed - just send a message and let AI do the rest.",
    benefits: [
      "Log expenses via text, photo, or voice note",
      "Instant expense confirmation and categorization",
      "Works on any device with WhatsApp",
      "Perfect for on-the-go expense tracking",
    ],
    priority: "high",
  },
  {
    title: "Receipt Scanner",
    icon: "fas fa-camera",
    status: "Coming Q2 2026",
    description:
      "Snap a photo of your receipt and let AI extract all the details automatically.",
    benefits: [
      "Auto-extract vendor, amount, and date",
      "Store receipt images for records",
      "Works with any receipt format",
      "Reduce manual data entry",
    ],
    priority: "medium",
  },
  {
    title: "Budget Alerts & Notifications",
    icon: "fas fa-bell",
    status: "Coming Q2 2026",
    description:
      "Get real-time notifications when you're approaching or exceeding your budget limits.",
    benefits: [
      "Custom alerts for different categories",
      "Weekly and monthly spending summaries",
      "Unusual spending pattern detection",
      "Multi-channel notifications (Email, SMS, Push)",
    ],
    priority: "high",
  },
  {
    title: "Expense Sharing & Splitting",
    icon: "fas fa-users-cog",
    status: "Coming Q3 2026",
    description:
      "Split bills with friends and family, and track who owes what.",
    benefits: [
      "Split expenses equally or by custom amounts",
      "Track IOUs and settlements",
      "Group expense tracking for trips",
      "Send payment reminders",
    ],
    priority: "medium",
  },
  {
    title: "Investment Tracking",
    icon: "fas fa-chart-line",
    status: "Coming Q4 2026",
    description:
      "Track your investment portfolio alongside your expenses for a complete financial picture.",
    benefits: [
      "Real-time stock and crypto tracking",
      "Portfolio performance analytics",
      "Net worth calculator",
      "Investment vs. spending insights",
    ],
    priority: "low",
  },
  {
    title: "Smart Recommendations",
    icon: "fas fa-lightbulb",
    status: "Coming Q4 2026",
    description:
      "Get AI-powered suggestions to optimize your spending and increase savings.",
    benefits: [
      "Find cheaper alternatives for subscriptions",
      "Identify wasteful spending patterns",
      "Personalized savings challenges",
      "Money-saving tips based on your habits",
    ],
    priority: "medium",
  },
];
---

<BaseLayout
  title="Upcoming Features - Spentiva by Exyconn"
  description="See what's coming next to Spentiva. Get early access to new features like WhatsApp integration, receipt scanning, and more."
>
  <Header />

  <!-- Hero Section -->
  <section
    class="relative bg-primary-50 pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div
        class="max-w-4xl mx-auto text-center translate-y-4 transition-all duration-700 ease-out"
      >
        <div
          class="inline-block bg-primary-400 text-white text-sm font-bold px-4 py-2 rounded-full uppercase tracking-wider mb-6"
        >
          <i class="fas fa-rocket mr-2"></i>
          Product Roadmap
        </div>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-text-primary tracking-tight"
        >
          What's Coming Next
        </h1>
        <p
          class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed"
        >
          We're constantly improving Spentiva. Here's a sneak peek at the
          exciting features we're working on.
        </p>
      </div>
    </div>
  </section>

  <!-- Upcoming Features -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          upcomingFeatures.map((feature, index) => (
            <div
              class="bg-background-base rounded-2xl border border-border-light p-8 hover:border-primary-200 hover:shadow-xl transition-all duration-300 group relative overflow-hidden"
              style={`animation-delay: ${index * 0.1}s`}
            >
              {index === 0 && (
                <div class="absolute top-0 right-0 bg-primary-400 text-white text-xs font-bold px-3 py-1.5 rounded-bl-lg uppercase tracking-wider">
                  <i class="fas fa-star mr-1" />
                  Next Up
                </div>
              )}

              <div class="w-16 h-16 bg-primary-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                <i class={`${feature.icon} text-3xl text-primary-400`} />
              </div>
              <h3 class="text-2xl font-bold text-text-primary mb-2">
                {feature.title}
              </h3>
              <div class="inline-block text-xs font-semibold px-3 py-1 rounded-full bg-primary-100 text-primary-600 mb-4">
                {feature.status}
              </div>
              <p class="text-text-secondary mb-6 leading-relaxed">
                {feature.description}
              </p>
              <ul class="space-y-3">
                {feature.benefits.map((benefit) => (
                  <li class="flex items-start text-sm text-text-primary">
                    <i class="fas fa-check-circle text-success mt-1 mr-3 flex-shrink-0" />
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Featured: WhatsApp Integration -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-background-surfaceAlt border-y border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <div
            class="inline-block bg-green-100 text-green-600 text-sm font-bold px-4 py-2 rounded-full uppercase tracking-wider mb-6"
          >
            <i class="fab fa-whatsapp mr-2"></i>
            Coming Soon
          </div>
          <h2
            class="text-3xl sm:text-4xl font-bold text-text-primary mb-6 tracking-tight"
          >
            WhatsApp Integration
          </h2>
          <p class="text-lg text-text-secondary mb-8 leading-relaxed">
            The most requested feature is on its way! Track your expenses
            without opening an app. Just send a WhatsApp message and let AI
            handle the rest.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <div
                class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mr-4"
              >
                <i class="fas fa-comment text-green-600"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-primary mb-1">Text Logging</h4>
                <p class="text-sm text-text-secondary">
                  Send "Coffee $5.50" and it's automatically logged and
                  categorized
                </p>
              </div>
            </div>
            <div class="flex items-start">
              <div
                class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mr-4"
              >
                <i class="fas fa-image text-green-600"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-primary mb-1">Photo Upload</h4>
                <p class="text-sm text-text-secondary">
                  Snap a picture of your receipt and AI extracts all details
                </p>
              </div>
            </div>
            <div class="flex items-start">
              <div
                class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mr-4"
              >
                <i class="fas fa-microphone text-green-600"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-primary mb-1">Voice Notes</h4>
                <p class="text-sm text-text-secondary">
                  Speak your expense and AI converts it to text automatically
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div
            class="bg-white rounded-2xl shadow-2xl border border-border-light p-6 max-w-md mx-auto"
          >
            <div
              class="flex items-center space-x-3 mb-6 pb-4 border-b border-border-light"
            >
              <div
                class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center"
              >
                <i class="fab fa-whatsapp text-white text-2xl"></i>
              </div>
              <div>
                <h4 class="font-bold text-text-primary">Spentiva Bot</h4>
                <p class="text-xs text-success flex items-center">
                  <span class="w-2 h-2 bg-success rounded-full mr-2"></span>
                  Online
                </p>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-end">
                <div
                  class="bg-primary-400 text-white rounded-2xl rounded-tr-sm px-4 py-3 max-w-xs"
                >
                  <p class="text-sm">Lunch at Thai Place $18.50</p>
                </div>
              </div>
              <div class="flex justify-start">
                <div
                  class="bg-background-surfaceAlt text-text-primary rounded-2xl rounded-tl-sm px-4 py-3 max-w-xs"
                >
                  <p class="text-sm">
                    âœ… Got it! Logged <strong>$18.50</strong> for <strong
                      >Lunch</strong>
                  </p>
                  <p class="text-xs text-text-secondary mt-2">
                    Category: Food & Dining
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Early Access CTA -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-primary-50 border-t border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-text-primary tracking-tight"
      >
        Want Early Access?
      </h2>
      <p
        class="text-xl mb-10 text-text-secondary max-w-2xl mx-auto leading-relaxed"
      >
        Sign up for Spentiva today and be the first to know when new features
        launch. Pro users get priority access!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://app.spentiva.com/signup"
          class="inline-flex items-center justify-center px-8 py-4 bg-primary-400 text-white font-semibold rounded-xl hover:bg-primary-500 transform hover:-translate-y-1 transition-all shadow-lg shadow-primary-400/25 text-base"
        >
          <i class="fas fa-rocket mr-2"></i>
          Get Started Free
        </a>
        <a
          href="/pricing"
          class="inline-flex items-center justify-center px-8 py-4 bg-white border border-border-default text-text-secondary font-semibold rounded-xl hover:bg-gray-50 hover:text-primary-400 transform hover:-translate-y-1 transition-all shadow-sm hover:shadow-md text-base"
        >
          <i class="fas fa-crown mr-2"></i>
          View Pro Plans
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
