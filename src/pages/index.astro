---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Banner from "../components/Banner.astro";

const features = [
  {
    icon: "fas fa-brain",
    title: "AI-Powered Insights",
    description:
      "Get intelligent analysis of your spending patterns with advanced AI technology.",
  },
  {
    icon: "fas fa-mobile-alt",
    title: "Mobile Friendly",
    description:
      "Track expenses on-the-go with our responsive web interface. Access anywhere, anytime.",
  },
  {
    icon: "fas fa-chart-line",
    title: "Real-time Analytics",
    description:
      "View comprehensive dashboards and reports to understand your financial health.",
  },
  {
    icon: "fas fa-tags",
    title: "Smart Categories",
    description:
      "Automatically categorize expenses with machine learning algorithms.",
  },
  {
    icon: "fas fa-shield-alt",
    title: "Bank-level Security",
    description:
      "Your data is encrypted and secure with enterprise-grade protection.",
  },
  {
    icon: "fas fa-users",
    title: "Multi-tracker Support",
    description:
      "Create multiple trackers for personal, business, or family expenses.",
  },
];

const howItWorks = [
  {
    step: "1",
    title: "Sign Up",
    description: "Create your free account in seconds with phone verification.",
    icon: "fas fa-user-plus",
  },
  {
    step: "2",
    title: "Create Tracker",
    description: "Set up expense trackers for different purposes or accounts.",
    icon: "fas fa-folder-plus",
  },
  {
    step: "3",
    title: "Add Expenses",
    description:
      "Use our intuitive web interface to log expenses quickly and easily.",
    icon: "fas fa-paper-plane",
  },
  {
    step: "4",
    title: "Track & Optimize",
    description: "View insights, analyze patterns, and optimize your spending.",
    icon: "fas fa-chart-pie",
  },
];

const testimonials = [
  {
    name: "Sarah Johnson",
    role: "Small Business Owner",
    image: "https://i.pravatar.cc/150?img=1",
    content:
      "Spentiva has transformed how I manage my business expenses. The AI insights help me make better financial decisions.",
  },
  {
    name: "Michael Chen",
    role: "Small Business Owner",
    content:
      "The AI insights helped me identify wasteful subscriptions I didn't even know I had. Highly recommended.",
    image: "https://i.pravatar.cc/150?img=11",
  },
  {
    name: "Emily Davis",
    role: "Marketing Manager",
    content:
      "Finally, an expense tracker that doesn't feel like a chore. It's actually fun to use!",
    image: "https://i.pravatar.cc/150?img=5",
  },
];

const faqs = [
  {
    question: "Is Spentiva really free?",
    answer:
      "Yes! Our basic plan is free forever and includes all essential features. We also offer a premium plan for power users.",
  },
  {
    question: "How secure is my data?",
    answer:
      "We use bank-grade encryption to protect your data. We never store your bank credentials and we never sell your data to third parties.",
  },
  {
    question: "Can I export my data?",
    answer:
      "Absolutely. You can export your expense data to CSV or PDF formats at any time.",
  },
  {
    question: "Do you support multiple currencies?",
    answer:
      "Yes, Spentiva supports over 150 currencies with real-time exchange rates.",
  },
];
---

<BaseLayout title="Spentiva - AI-Powered Expense Tracking by Exyconn">
  <Header />

  <Banner />

  <!-- Features Section -->
  <section id="features" class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h2
          class="text-3xl sm:text-4xl font-bold text-text-primary mb-4 tracking-tight"
        >
          Powerful Features
        </h2>
        <p class="text-lg sm:text-xl text-text-secondary">
          Everything you need to take control of your finances
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          features.map((feature, index) => (
            <div
              class="bg-background-base rounded-xl border border-border-light p-8 hover:border-primary-200 hover:shadow-lg transition-all duration-300 group translate-y-4 ease-out"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="w-14 h-14 bg-primary-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                <i class={`${feature.icon} text-2xl text-primary-400`} />
              </div>
              <h3 class="text-xl font-bold text-text-primary mb-3">
                {feature.title}
              </h3>
              <p class="text-text-secondary leading-relaxed">
                {feature.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-background-surfaceAlt border-y border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1">
          <div class="relative">
            <img
              src="https://images.unsplash.com/photo-1579621970563-ebec7560ff3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
              alt="Dashboard Preview"
              class="relative rounded-2xl shadow-2xl border border-border-light w-full transform hover:scale-[1.02] transition-transform duration-500"
            />

            <!-- Floating stats card -->
            <div
              class="absolute -bottom-6 -right-6 bg-white p-4 rounded-xl shadow-xl border border-border-light hidden sm:block"
              style="animation-duration: 3s;"
            >
              <div class="flex items-center space-x-3">
                <div
                  class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-600"
                >
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div>
                  <p class="text-xs text-text-secondary">Monthly Savings</p>
                  <p class="font-bold text-text-primary text-lg">+$450.00</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <h2
            class="text-3xl sm:text-4xl font-bold text-text-primary mb-6 tracking-tight"
          >
            Effortless Expense Management
          </h2>
          <div class="space-y-8">
            <div class="flex">
              <div class="flex-shrink-0 mr-6">
                <div
                  class="w-12 h-12 bg-primary-400 text-white rounded-xl flex items-center justify-center font-bold text-xl shadow-lg shadow-primary-400/20"
                >
                  1
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold text-text-primary mb-2">
                  Connect Your Accounts
                </h3>
                <p class="text-text-secondary leading-relaxed">
                  Securely link your bank accounts or simply start logging
                  expenses manually.
                </p>
              </div>
            </div>
            <div class="flex">
              <div class="flex-shrink-0 mr-6">
                <div
                  class="w-12 h-12 bg-primary-400 text-white rounded-xl flex items-center justify-center font-bold text-xl shadow-lg shadow-primary-400/20"
                >
                  2
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold text-text-primary mb-2">
                  Log Your Expenses
                </h3>
                <p class="text-text-secondary leading-relaxed">
                  Use our web interface to quickly log expenses with automatic
                  categorization.
                </p>
              </div>
            </div>
            <div class="flex">
              <div class="flex-shrink-0 mr-6">
                <div
                  class="w-12 h-12 bg-primary-400 text-white rounded-xl flex items-center justify-center font-bold text-xl shadow-lg shadow-primary-400/20"
                >
                  3
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold text-text-primary mb-2">
                  Get AI Insights
                </h3>
                <p class="text-text-secondary leading-relaxed">
                  Receive personalized reports and recommendations to optimize
                  your spending.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 sm:py-20 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h2
          class="text-3xl sm:text-4xl font-bold text-text-primary mb-4 tracking-tight"
        >
          Loved by Thousands
        </h2>
        <p class="text-lg sm:text-xl text-text-secondary">
          See what our users have to say about Spentiva
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial, index) => (
            <div
              class="bg-background-base rounded-xl border border-border-light p-8 hover:border-primary-200 hover:shadow-lg transition-all duration-300 translate-y-4 ease-out"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="flex items-center mb-6">
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full mr-4 object-cover ring-2 ring-primary-100"
                />
                <div>
                  <h4 class="font-bold text-text-primary">
                    {testimonial.name}
                  </h4>
                  <p class="text-sm text-primary-400 font-medium">
                    {testimonial.role}
                  </p>
                </div>
              </div>
              <p class="text-text-secondary italic leading-relaxed">
                "{testimonial.content}"
              </p>
              <div class="mt-4 flex text-yellow-400 text-sm">
                <i class="fas fa-star" />
                <i class="fas fa-star" />
                <i class="fas fa-star" />
                <i class="fas fa-star" />
                <i class="fas fa-star" />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section
    id="faq"
    class="py-16 sm:py-20 lg:py-24 bg-background-surfaceAlt border-t border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <h2
          class="text-3xl sm:text-4xl font-bold text-text-primary mb-4 tracking-tight"
        >
          Frequently Asked Questions
        </h2>
        <p class="text-lg sm:text-xl text-text-secondary">
          Everything you need to know about Spentiva
        </p>
      </div>
      <div class="max-w-3xl mx-auto space-y-6">
        {
          faqs.map((faq, index) => (
            <div class="bg-white rounded-xl border border-border-light p-6 hover:border-primary-200 transition-colors shadow-sm">
              <h3 class="text-lg font-bold text-text-primary mb-3 flex items-start">
                <span class="text-primary-400 mr-3 mt-1">
                  <i class="fas fa-question-circle" />
                </span>
                {faq.question}
              </h3>
              <p class="text-text-secondary leading-relaxed pl-8">
                {faq.answer}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="py-16 sm:py-20 lg:py-24 bg-primary-50 border-t border-border-light"
  >
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-text-primary tracking-tight"
      >
        Ready to Master Your Finances?
      </h2>
      <p
        class="text-xl mb-10 text-text-secondary max-w-2xl mx-auto leading-relaxed"
      >
        Join thousands of users who are saving money and achieving their
        financial goals with Spentiva.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://app.spentiva.com/signup"
          class="cursor-pointer inline-flex items-center justify-center px-8 py-4 bg-primary-400 text-white font-semibold rounded-xl hover:bg-primary-500 transform hover:-translate-y-1 transition-all shadow-lg shadow-primary-400/25 text-base"
        >
          <i class="fas fa-rocket mr-2"></i>
          Get Started Free
        </a>
        <a
          href="#features"
          class="cursor-pointer inline-flex items-center justify-center px-8 py-4 bg-white border border-border-default text-text-secondary font-semibold rounded-xl hover:bg-gray-50 hover:text-primary-400 transform hover:-translate-y-1 transition-all shadow-sm hover:shadow-md text-base"
        >
          <i class="fas fa-play-circle mr-2"></i>
          Learn More
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
